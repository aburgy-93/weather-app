em 2.5rem;\n  width: 67%;\n  height: 5.4rem;\n  border-radius: 3rem;\n  flex: 1;\n  margin-right: 1.6rem;\n  font-size: 1.8rem;\n}\n\n.error > p {\n  font-size: 1.6rem;\n}\n\nion-icon {\n  margin-top: 2rem;\n  height: 5rem;\n  width: 5rem;\n}\n\n.btn {\n  border: 0;\n  outline: 0;\n  background: #ebfffc;\n  border-radius: 50%;\n  width: 5.4rem;\n  height: 5.4rem;\n  cursor: pointer;\n}\n\nbutton img {\n  width: 1.6rem;\n}\n\n/* weather div */\n\n.weather-icon {\n  width: 11rem;\n  margin-top: 1rem;\n}\n\n.hidden {\n  display: none;\n}\n\n.weather-div h1 {\n  font-size: 5.2rem;\n  font-weight: 500;\n}\n\n.weather-div h2 {\n  font-size: 3.6rem;\n  font-weight: 400;\n}\n\n/* weather details */\n\n.details {\n  display: flex;\n  align-items: center;\n  justify-content: space-between;\n  padding: 0 3rem;\n  margin-top: 5rem;\n}\n\n.col {\n  display: flex;\n  align-items: center;\n  text-align: left;\n  margin-top: -2.5rem;\n}\n\n.col img {\n  width: 4.8rem;\n  margin-right: 1rem;\n}\n\n.left {\n  margin-right: 3rem;\n}\n\n.condition {\n  display: flex;\n}\n\n.speed {\n  display: flex;\n  align-items: end;\n}\n\n.speed > span {\n  margin-left: 0.2rem;\n  margin-bottom: 0.4rem;\n  font-size: 2rem;\n}\n\n.percent > span {\n  font-size: 2rem;\n}\n\n.humidity,\n.wind {\n  margin-top: -0.6rem;\n}\n\n.condition > p {\n  font-size: 3rem;\n}\n\n.condition-div > p {\n  font-size: 1.6rem;\n}\n\n/* hourly */\n\n.hourly-container {\n  /* display: flex; */\n  max-width: 48rem;\n  background: linear-gradient(135deg, #00feba, #5b548a);\n  color: #fff;\n  margin: 3.2rem auto 0;\n  border-radius: 2rem;\n  padding: 1.6rem 2.4rem;\n  text-align: center;\n}\n\n.title {\n  display: flex;\n  align-items: start;\n}\n\n.hourly-title,\n.forecast-title {\n  font-size: 1.4rem;\n  margin-left: 0.5rem;\n  margin-bottom: 0.8rem;\n}\n\n.svg {\n  width: 18px;\n  filter: invert(100%) sepia(100%) saturate(2%) hue-rotate(324deg)\n    brightness(105%) contrast(101%);\n}\n\n.preview {\n  padding: 0rem 1rem;\n}\n\n.hourly {\n  display: flex;\n  flex-direction: row;\n  list-style: none;\n  width: 100%;\n  overflow-x: auto;\n  overflow-y: hidden;\n  white-space: nowrap;\n  padding: 0.8rem 0rem;\n}\n\n.hourImg {\n  /* width: 75%; */\n  width: 4.4rem;\n}\n\n.hour,\n.hourlyTemp {\n  font-size: 1.2rem;\n}\n\n/* forecast */\n\n.forecast {\n  display: flex;\n  flex-direction: column;\n  max-width: 48rem;\n  background: linear-gradient(135deg, #00feba, #5b548a);\n  color: #fff;\n  margin: 3.2rem auto 0;\n  border-radius: 2rem;\n  padding: 2.4rem 3.6rem;\n  text-align: center;\n}\n\n.forecast-container {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  float: left;\n  width: 100%;\n}\n\n.day {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  flex-direction: column;\n  width: 100%;\n  margin-right: 1rem;\n}\n\n.day > p {\n  font-size: 1.8rem;\n}\n\n.day > img {\n  width: 75%;\n}\n"],"names":[],"version":3,"file":"index.3a01df49.css.map","sourceRoot":"/__parcel_source_root/"}